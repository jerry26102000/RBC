<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/customer_requests_design_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:elevation="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/heading_design"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:text="heading"
                android:textColor="#000000"/>
            <LinearLayout
                android:id="@+id/linear_layout_1"
                android:layout_below="@+id/heading_design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_weight="10">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name: "
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="10sp"/>
                    <TextView
                        android:id="@+id/name_design"
                        android:layout_toRightOf="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name"

                        android:fontFamily="sans-serif"
                        android:textSize="10sp"/>
                    <TextView
                        android:id="@+id/phoneNo"
                        android:layout_below="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="phone No: "
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="10sp"/>
                    <TextView
                        android:id="@+id/phoneNo_design"
                        android:layout_toRightOf="@+id/phoneNo"
                        android:layout_below="@id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name"

                        android:fontFamily="sans-serif"
                        android:textSize="10sp"/>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_weight="10">
                    <TextView
                        android:id="@+id/email"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="email: "
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="10sp"/>
                    <TextView
                        android:id="@+id/email_design"
                        android:layout_toRightOf="@+id/email"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name"

                        android:fontFamily="sans-serif"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/date"
                        android:layout_below="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="date: "
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="10sp"/>
                    <TextView
                        android:id="@+id/date_design"
                        android:layout_toRightOf="@+id/date"
                        android:layout_below="@id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name"

                        android:fontFamily="sans-serif"
                        android:textSize="10sp"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/delete_design"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_baseline_delete_24"
                        android:scaleType="fitXY"/>
                </RelativeLayout>

            </LinearLayout>
            <TextView
                android:layout_below="@+id/linear_layout_1"
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:text="address: "
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/address_design"
                android:layout_toRightOf="@+id/address"
                android:layout_below="@id/linear_layout_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"

                android:fontFamily="sans-serif"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/description"
                android:layout_marginStart="5dp"
                android:layout_below="@+id/address_design"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="description: "
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/description_design"
                android:layout_toRightOf="@+id/description"
                android:layout_below="@id/address_design"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"

                android:fontFamily="sans-serif"
                android:textSize="10sp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>