<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/store_item_cardView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:cardBackgroundColor="@color/storeGray"
        android:elevation="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"
            android:paddingHorizontal="20dp">
            <ImageView
                android:id="@+id/store_item_image"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:src="@drawable/construction_card"
                android:scaleType="fitXY"/>
            <TextView android:id="@+id/store_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Name"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/store_item_image"
                android:textColor="#000000"

                android:textSize="15sp"
                android:fontFamily="sans-serif"
                />
            <TextView android:id="@+id/store_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_font"
                android:layout_below="@+id/store_item_name"
                android:text="des"/>
            <ImageView
                android:id="@+id/store_menu_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_more_vert_24"
               android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>